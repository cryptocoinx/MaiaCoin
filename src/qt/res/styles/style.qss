        color: #000000;
        padding: 7px;
}

QCheckBox {
        border: 3px solid #FF0000;
        border-radius: 4px;
        padding: 3px;
        background-color: #FFFFFF;
        color: black;
}

QSpinBox {
        border: 2px solid #FF0000;
        border-radius: 4px;
        padding: 2px;
        background-color: #FFFFFF;
        color: black;
}

QComboBox {
        border-radius: 6px;
        border-width: 0;
        border-style: none;
        padding: 8px;
        background-color: #FFFFFF;
        color: black;
