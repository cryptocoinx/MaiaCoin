        background: #FFFFFF;
        border: 0px solid black;
        padding: 3px;
}

QToolBar::handle {
        image: url(handle.png);
}
QStatusBar {
        background: #FFFFFF;
}
QMenuBar {
        background: #FFFFFF;
        }
QMenuBar::item {
        background: #FFFFFF;
        color: black;
        }
QMenuBar::hovered {
        background: #FFDDDD;
        }

QLineEdit {
