}

QTableView {
        background: #FFFFFF;
        color: #000000;
        border-style: none;
        selection-background-color: #dddddd;
        alternate-background-color: #d3d3d3;
        selection-color: #FFFFFF;
        border: 1px solid white;
}

QHeaderView { color: #aaaaaa; background-color: #FFFFFF; background-image: none; }
QHeaderView::section { color: #aaaaaa; background-color: #222; }
QHeaderView::section:checked { background-color: #FFFFFF; }

QTabWidget {
        border: 3px solid #FF0000;
        border-radius: 6px;
        background-color: #FF0000;
        color: #000000;
        padding: 7px;
}

QTabWidget::pane {
        border-top: 4px solid #FF0000;
        border: 3px solid #FF0000;
                border-radius: 6px;
        background: #FFFFFF;
}

QTabWidget::tab-bar {
        left: 5px; /* move to the right by 5px */
}

 /* Style the tab using the tab sub-control. Note that
     it reads QTabBar _not_ QTabWidget */

QTabBar::tab {
        background: #FFFFFF;
        border: 4px solid #222;
        border-bottom-color: #FFFFFF; /* same as the pane color */
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
        min-width: 8ex;
        padding: 4px;
        color: #888;
}

QTabBar::tab:selected, QTabBar::tab:hover {
        color: #aaaaaa
}

QTabBar::tab:selected {
        border-color: #FFFFFF; /* same as pane color */
        border-top-color: #aaaaaa;
}

QTabBar::tab:!selected {
        margin-top: 2px; /* make non-selected tabs look smaller */
}

 /* make use of negative margins for overlapping tabs */
QTabBar::tab:selected {
     /* expand/overlap to the left and right by 4px */
        margin-left: -4px;
        margin-right: -4px;
}

QTabBar::tab:first:selected {
        margin-left: 0; /* the first selected tab has nothing to overlap with on the left */
}

QTabBar::tab:last:selected {
        margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
}

QTabBar::tab:only-one {
        margin: 0; /* if there is only one tab, we don't want overlapping margins */
}


