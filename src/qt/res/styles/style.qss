QProgressBar {
        background-color: #FFFFFF;
        border-radius: 6px;
        text-align: center;
        color: black;
}

QProgressBar::chunk {
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #F43050);
        border-radius: 6px; margin: 0px;
}

QScrollArea {
        border-radius: 6px;
        border-width: 0;
        border-style: none;
        padding: 8px;
        background-color: #FFFFFF;
        color: black;
}

QVBoxLayout {
        border-radius: 6px;
        border-width: 0;
        border-style: none;
        padding: 8px;
        background-color: #FFFFFF;
        color: black;
}

QDialog {
        color: black;
        background-color: #FFFFFF;
        border: none;
}

QMainWindow {
        color: black;
        background-color: #FFFFFF;
        border: none;
}

QMenu {
        background-color: #FFFFFF;
        color: black;
}

QLabel {
        background-color: transparent;
}

QCheckBox {
        border-radius: 2px;
        border-width: 0;
        border-style: none;
        padding: 3px;
        background-color: #FFFFFF;
        color: black;
}

QFrame#central {
        background-color: #FFFFFF;
}

QFrame#frame, QFrame#frame_2, QFrame#frame_3, QFrame#gridFrame_2 {
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #F43050, stop: 2 #FFFFFF);
        border-style: plain;
        border-width: 20px;
        border-radius: 15px;
        border-color: #111;
        min-width: 10em;
        padding: 6px;
        color: #000000;
}

QLabel[openExternalLinks=true], QHeaderView { color: #aaaaaa }
QLabel[openExternalLinks=false] { color: black; font-weight: normal }


QPushButton, QToolButton {

        border-radius: 4px;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #F43050);
        color: #000000;
        padding: 7px;
        margin: 5px;
}
QPushButton:pressed, QToolButton:checked {
        color: #ffffff;

}
QPushButton:pressed, QToolButton:pressed {
        color: #FF1111;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #B3242C);
}
QPushButton:disabled, QToolButton:disabled {

        color: #000000;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #d3d3d3);
}


/* the background-color is overridden to transparent for mac os x
   due to the entire toolbar area not being drawable in a regular
   QMainWindow
*/
